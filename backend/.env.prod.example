# Server Port
PORT=10000

# MongoDB Connection URI for Production
MONGO_URI_PROD=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/chatmee?retryWrites=true&w=majority

# Redis Connection URL (e.g., Upstash)
REDIS_URL=redis://default:<password>@<host>:<port>

# Client URL (Frontend)
APP_CLIENT_URL=https://your-frontend-domain.com

# OAuth2 Configuration - Google
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# OAuth2 Configuration - GitHub (Optional)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
